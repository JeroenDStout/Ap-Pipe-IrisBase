{
  "pipes" : [
    { "tool" : "smartcopy",
      "paths" : [
        { "in"  : "{front-build-dir}/*~file~",
          "out" : "{spec-web-dir}/{file}" },
        { "in"  : "{front-build-dir}/static/*~file~",
          "out" : "{spec-web-dir}/static/{file}" },
        { "in"  : "{front-build-dir}/static/css/*~file~.css",
          "out" : "{spec-web-dir}/static/css/{file}.css" },
        { "in"  : "{front-build-dir}/static/js/*~file~.js",
          "out" : "{spec-web-dir}/static/js/{file}.js" },
        { "in"  : "{front-build-dir}/static/media/*~file~",
          "out" : "{spec-web-dir}/static/media/{file}" }
      ]
    }
  ]
}